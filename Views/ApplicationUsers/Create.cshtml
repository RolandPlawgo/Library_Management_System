@using LibraryManagementSystem.Authentication
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager;

@model LibraryManagementSystem.Authentication.ApplicationUser;
@{
	ViewData["Title"] = "Register new user";
}

<h1 class="h3">Create new account</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" placeholder="first name" />
                <label asp-for="@Model.FirstName">First name</label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" placeholder="last name" />
                <label asp-for="@Model.LastName">Last name</label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Email" class="form-control" aria-required="true" placeholder="email" />
                <label asp-for="@Model.Email">Email</label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder="phone number" />
                <label asp-for="@Model.PhoneNumber">Phone number</label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.DateOfBirth" type="date" class="form-control" aria-required="true" placeholder="date of birth" />
                <label asp-for="@Model.DateOfBirth">Date of birth</label>
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.UserName" value="@ViewData["RandomNumber"]" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                <label asp-for="@Model.UserName">Library Card Number</label>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div>
                <label>Role</label>
                <select name="role">
                    <option>user</option>
                    <option>administrator</option>
                </select>
            </div>
            <button type="submit" class="w-100 btn btn-lg button text-light">Register user</button>
        </form>
    </div>
</div>